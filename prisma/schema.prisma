generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Document {
  id        String      @id @default(uuid())
  origin    OrderOrigin
  type      OrderType
  userId    String
  fileUrl   String
  emitter   String
  taxValue  Decimal     @db.Decimal(10, 2)
  netValue  Decimal     @db.Decimal(10, 2)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

enum OrderOrigin {
  DIGITALIZED
  ELECTRONIC
}

enum OrderType {
  SERVICE_CONTRACT
  SERVICE_NOTE
}
